{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./public/js/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "baseUrl": "src",
      "typeRoots": [
        "node_modules/@types/",
        "types"
      ],
      "paths": {
        // "@Models/*": ["app/models/*"],
        // "@Interfaces/*": ["app/interfaces/*"],
        "@reducers/*": ["./reducers/*"],
        "@actions/*": ["./actions/*"],
        "@store/*": ["./store/*"], 
        "@containers/*": ["./containers/*"],
        // "@Types/*": ["app/types/*"],
        // "@Store/*": ["app/store/*"],
        // "@Sass/*": ["app/sass/*"],
        // "@Config/*": ["app/config/*"],
        "@components/*": ["./components/*"],
        // "@Context/*": ["app/context/*"],
      }
  },
  "include": [
    "./**/**/*"
  ]
}