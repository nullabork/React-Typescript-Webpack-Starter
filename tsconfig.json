{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./public/js/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "baseUrl": "src",
      "typeRoots": [
        "node_modules/@types/",
        "types"
      ],
      "paths": {
        "@components/*": ["./app/components/*"],
        "@containers/*": ["./app/containers/*"],
        "@reducers/*": ["./reducers/*"],
        "@actions/*": ["./actions/*"],
        "@store/*": ["./store/*"],
        "@conf/*": ["./conf/*"],
        // "@Types/*": ["app/types/*"],
        // "@Store/*": ["app/store/*"],
        // "@Sass/*": ["app/sass/*"],
        // "@Config/*": ["app/config/*"]       
      }
  },
  "include": [
    "./**/**/*"
  ]
}